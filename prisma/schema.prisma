generator client {
  provider = "prisma-client-py"
}

datasource db {
  provider = "sqlite" // or "postgresql", "mysql", "sqlserver"
  url      = env("DATABASE_URL")
}

model User {
  id               Int           @id @default(autoincrement())
  telegramId       String        @unique
  name             String
  notificationTime String // Time in "HH:mm" format to send notifications about price change
  userProducts     UserProduct[]
}

model Product {
  id               Int           @id @default(autoincrement())
  name             String
  productUrl       String
  productRefer     String
  photoUrl         String
  lowestPrice      Int
  highestPrice     Int
  uniqueIdentifier String        @unique
  lastFetched      DateTime?
  prices           Price[]
  userProducts     UserProduct[]
}

model Price {
  id        Int      @id @default(autoincrement())
  productId Int
  price     Int
  timestamp DateTime @default(now())
  product   Product  @relation(fields: [productId], references: [id])
}

model UserProduct {
  id                   Int     @id @default(autoincrement())
  userId               Int
  productId            Int
  notificationInterval String // daily or weekly
  user                 User    @relation(fields: [userId], references: [id])
  product              Product @relation(fields: [productId], references: [id])
  minPrice             Int?

  @@unique([userId, productId])
}
